<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightsteelblue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.nelsonbenitez.calculadoraderesistencias.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/resistencia_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_weight="8"
        android:gravity="center"
        android:minHeight="90dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/black" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/khaki" />

        <TextView
            android:id="@+id/franja_uno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:onClick="Cambiar_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/khaki" />

        <TextView
            android:id="@+id/franja_dos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:onClick="Cambiar_franja_dos" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/khaki" />


        <TextView
            android:id="@+id/franja_tres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:onClick="CambiarFranjaTres" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/khaki" />

        <TextView
            android:id="@+id/franja_cuatro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:onClick="Cambiar_franja_cuatro" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/khaki" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/black" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="40dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textoResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/valor_Resistencia"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginTop="40dp"
        android:layout_weight="4"
        android:gravity="center">

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center"
            android:minHeight="200dp"
            android:text="@string/text_result"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="60dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:gravity="center">

        <Button
            android:id="@+id/calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Calcular_Resistencia"
            android:text="@string/Calcular"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
